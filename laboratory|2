<!DOCTYPE html>
<html>
<body>
<h1>Список</h1>

<script>
let ul = document.createElement("ul");
let arr = [];
document.body.append(ul);

while (true) {
let data = prompt("Введите слова для создания списка", "");

if (!data) break;
arr.push(data);
}

arr.sort();
arr.push(arr.length);

for (let i = 0; i < arr.length; i++) {
let li = document.createElement("li");
li.textContent = arr[i];
ul.append(li);
}
</script>
</body>
</html>
